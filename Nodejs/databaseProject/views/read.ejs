<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- <link rel="stylesheet" href="stylesheets/style.css" /> -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="w-full h-full bg-zinc-900">
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <a class="text-blue-500" href="/">Back to Home Page</a>

      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% users.forEach(function(user){ %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
     
            <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
              <img class="w-full h-full object-contain" src="<%= user.image %>" alt=""/>
            </div>
            <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-500"><%= user.email %></h5>
            <div class="flex gap-3 mt-10">
              <a class="text-zinc-200" href="/edit/<%= user._id%>">Edit user</a>
              <a class="text-zinc-500" class="" href="/delete/<%= user._id %>">Delete</a>
            </div>
          </div> 
            
            
          <% }) %>
       
    </div>
  </body>
</html>
